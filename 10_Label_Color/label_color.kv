# les elements ci apres seront herite par dans MyLayout
<Button>
    font_size:32
    background_normal: ''
    background_color: (0,0,1,1)

<TextInput>
    background_normal: ''
    background_color: (150/255,150/255,150/255,1)

<Label>
    font_size: 32

<MyLayout>
    BoxLayout:
        #orientation: "horizontal" # alignement horizontal des bouton
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 10 # Mettre de l'espace entre les boutons
        padding: 10 # Espace sur le bord

        Label:
            text: "Nom"
            font_size:45
            background_color: (182/255, 66/255, 245/255, 1) 
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: (0, 1, 0, 1)
            bold: True
            italic: True
            #outline_color: (0,0,0) #noir
            outline_color: (0,0,1) #bleu
            outline_width: 10
        
        TextInput:
            multiline: False
        
        Button:
            text:"Soumettre"        