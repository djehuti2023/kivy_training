<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right" # le cote ou sera le curseur
            font_size: 65
            size_hint: (1, 0.15)

        GridLayout:
            cols: 4
            rows: 5
            
            # Ligne 1
            Button:
                text: "%"
                font_size: 32
                size_hint:(0.2, 0.2)
            Button:
                text: "CE"
                font_size: 32
                size_hint:(0.2, 0.2)
            Button:
                id: clear
                text: "C"
                font_size: 32
                size_hint:(0.2, 0.2)
                on_press: root.clear()
            Button:
                text: "/"
                font_size: 32
                size_hint:(0.2, 0.2)

            #  Ligne 2
            Button:
                text: "7"
                font_size: 32
                size_hint:(0.2, 0.2)
                background_color: (157/255, 157/255, 157/255, 1)
            Button:
                text: "8"
                font_size: 32
                size_hint:(0.2, 0.2)
                background_color: (157/255, 157/255, 157/255, 1)                
            Button:
                text: "9"
                font_size: 32
                size_hint:(0.2, 0.2)
                background_color: (157/255, 157/255, 157/255, 1)
            Button:
                text: "x"
                font_size: 32
                size_hint:(0.2, 0.2)
            
            
            #  Ligne 3
            Button:
                text: "4"
                font_size: 32
                size_hint:(0.2, 0.2)
                background_color: (157/255, 157/255, 157/255, 1)
            Button:
                text: "5"
                font_size: 32
                size_hint:(0.2, 0.2)
                background_color: (157/255, 157/255, 157/255, 1)
            Button:
                text: "6"
                font_size: 32
                size_hint:(0.2, 0.2)
                background_color: (157/255, 157/255, 157/255, 1)
            Button:
                text: "-"
                font_size: 32
                size_hint:(0.2, 0.2)
                
            
            
            #  Ligne 4
            Button:
                text: "1"
                font_size: 32
                size_hint:(0.2, 0.2)
                background_color: (157/255, 157/255, 157/255, 1)
            Button:
                text: "2"
                font_size: 32
                size_hint:(0.2, 0.2)
                background_color: (157/255, 157/255, 157/255, 1)
            Button:
                text: "3"
                font_size: 32
                size_hint:(0.2, 0.2)
                background_color: (157/255, 157/255, 157/255, 1)
            Button:
                text: "+"
                font_size: 32
                size_hint:(0.2, 0.2)


            # Ligne 5
            Button:
                text: "+/-"
                font_size: 32
                size_hint:(0.2, 0.2)
                background_color: (157/255, 157/255, 157/255, 1)
            Button:
                text: "0"
                font_size: 32
                size_hint:(0.2, 0.2)
                background_color: (157/255, 157/255, 157/255, 1)
            Button:
                text: "."
                font_size: 32
                size_hint:(0.2, 0.2)
                background_color: (157/255, 157/255, 157/255, 1)
            Button:
                text: "="
                font_size: 32
                size_hint:(0.2, 0.2)
