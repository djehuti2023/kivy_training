<MyGridLayout>
    # Ce sont des identifiants qui permettrons 
    # d'identifier les zones de saisie afin de permettre 
    # leur utilisation dans le code python
    name:name
    food:food
    color:color

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text:"Nom"
            
            TextInput:
                id: name
                multiline:False
            
            Label:
                text:"Plat prefere"
            
            TextInput:
                id: food
                multiline:False
            
            Label:
                text:"Couleur prefere"
            
            TextInput:
                id: color
                multiline:False
        Button:
            text: "Soumettre"
            font_size: 32
            on_press: root.press()